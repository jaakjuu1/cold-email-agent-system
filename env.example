# ===========================================
# Cold Outreach System - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# ===========================================
# AI & Research APIs
# ===========================================

# DeepSeek API (Required)
DEEPSEEK_API_KEY=sk-...

# Google Maps API (Required)
GOOGLE_MAPS_API_KEY=AIza...

# Firecrawl API (Required)
FIRECRAWL_API_KEY=fc-...

# Perplexity API (Required)
PERPLEXITY_API_KEY=pplx-...

# ===========================================
# Email Service
# ===========================================

# Email Service Provider (resend | smtp)
EMAIL_SERVICE=resend

# Resend Configuration
RESEND_API_KEY=re_...
EMAIL_FROM=outreach@yourdomain.com

# SMTP Configuration (alternative to Resend)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_SECURE=false

# ===========================================
# IMAP (Response Monitoring)
# ===========================================

IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password

# ===========================================
# Contact Enrichment (Optional)
# ===========================================

HUNTER_API_KEY=
APOLLO_API_KEY=

# ===========================================
# Database
# ===========================================

# Turso (Production)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# ===========================================
# Redis (Task Queue)
# ===========================================

REDIS_URL=redis://localhost:6379

# ===========================================
# Monitoring (Optional)
# ===========================================

SENTRY_DSN=
POSTHOG_API_KEY=

